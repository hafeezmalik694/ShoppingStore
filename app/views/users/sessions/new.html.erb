<div class="global-container">
  <div class="card login-form">
    <div class="card-body">
      <h3 class="card-title text-center">Welcome To Shopping Store</h3>
      <div class="card-text">
         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <label> Email address</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", required: true %>
          </div>
          <div class="form-group">
            <label> Password</label>
            <%= f.password_field :password, autofocus: true, autocomplete: "password", class: "form-control form-control-sm", required: true %>
            <a href="#" style="float:right;font-size:12px;">Forgot password?</a>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Sign in</button>
          <div class="sign-up">
            Don't have an account? <a href="<%= new_user_registration_path %>">Create One</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>